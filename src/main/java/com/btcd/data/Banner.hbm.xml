<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.btcd.data.Banner" table="banner">
    <id name="id" column="id" type="int">
        <generator class="increment"/>
    </id>
    <property name="title" column="title" type="string" not-null="false"/>
    <property name="path" column="path" type="string" not-null="true"/>
    <property name="use" column="is_use" type="boolean" not-null="true"/>
    <property name="url" column="url" type="string" not-null="false" />
</class>
</hibernate-mapping>