<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.btcd.data.Bitclass" table="bitclass">
        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>
        <property name="title" column="title" type="string" not-null="true"/>
        <property name="auth" column="auth" type="string" not-null="true"/>
        <property name="content" column="content" type="string" not-null="true"/>
        <property name="time" column="time" type="date" not-null="true"/>
    </class>
</hibernate-mapping>